<div class="container-fluid">
  <form action="/equips/new_sc" method="post" enctype="multipart/form-data">
    <dl>
      <dt>
        <label for="sc_name">Enter a card name:</label>
      </dt>
      <dd>
        <input class="content" name="sc_name" placeholder="" type="text"  value="<%= params[:sc_name] %>" required>
      </dd>
      <dt>
        <label for="enabled"> Check to hide profile from public view:</label>
      </dt>
      <dd>
        <input class="content" name="enabled" placeholder="" type="checkbox">
      </dd>
      <% @card.each do |key, value| %>
      <% next if key == 'enabled' %>
      <dt>
        <label for="<% key %>"><%= key.capitalize %> info:</label>
      </dt>
      <dd>
        <% if key == "pic" %>
          <label for="upload"><em>upload a file or enter filename (from server)</em></label>
          <input type="file" name="file" value="upload">
          <input class="content" name="<%= key %>" placeholder="" type="text"  value="<%= params[key.to_sym] %>">
        <% elsif key == "stars" %>
          <input class="content" name="<%= key %>" placeholder="" type="text"  value="<%= params[key.to_sym] || value %>">
        <% elsif key == "index" %>
          <input class="content" name="<%= key %>" placeholder="" type="text"  value="<%= @max_index_val %>">
        <% elsif ['prism', 'normal'].include?(key) %>
          <textarea class="content" name="<%= key %>" placeholder="attack 100 200 300 defense 110 210 310" rows="3" cols="50"><%= value %></textarea>
        <% else %>
          <textarea class="content" name="<%= key %>" placeholder="restrictions restrictions-details ability ability-details" rows="3" cols="50"><%= value %></textarea>
        <% end %>
      </dd>
      <% end %>
    </dl>
    <fieldset class="actions">
      <button type="submit" value="Save">Save</button>
      <a href="/">Cancel</a>
    </fieldset>
  </form>
</div>
