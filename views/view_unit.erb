<div id="back_to_main">
  <% stars = @current_unit["stars"] %>
  <a href="/childs/<%= stars %>stars">Go back</a>
</div>

<div class="container-fluid">
    <h3><%= upcase_name(@unit_name) %></h3>
    <div class="row">
      <img class="profile_imgs" src="<%= @current_unit["pic"] %>"/>
      <img class="profile_imgs" src="<%= @current_unit["pic2"] %>"/>
      <img class="profile_imgs" src="<%= @current_unit["pic3"] %>"/>
    </div>
    <div class="row">
      <% @current_unit.each do |info_key, info_val| %>
        <% unless info_key == "index" || info_key == "pic"  || info_key == "pic2"  || info_key == "pic3" || !is_special_key?(info_key) %>
          <div class="profile-stat-container">
            <h5 class="card-title"><%= info_key.capitalize %>:</h5>
            <% if info_key == "type" || info_key == "element" %>
              <p class="short-stat-content"><%== format_stat(info_key, info_val) %></p>
            <% else %>
              <p class="short-stat-content"><%== format_stat(info_key, info_val) %></p>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>


 <div class="col-*">
   <% @current_unit.each do |info_key, info_val| %>
     <% unless is_special_key?(info_key) || info_key == "index" %>
     <div class="profile-stat-container">
         <h5 class="card-title"><%= info_key.capitalize %>:</h5>
         <ul>
           <% info_val.split(". ").each do |line| %>
             <p><%= line %></p>
           <% end %>
         </ul>
       <% end %>
     </div>
   <% end %>
 </div>

</div>
