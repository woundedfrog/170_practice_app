<div id="back_to_main">
	<% stars = @current_card["stars"] %>
	<a href="/equips/<%= stars %>stars">Go back</a>
</div>
<div class="unit_profile_div">

	<div class="container-fluid">
		<h3><%= upcase_name(@sc_name) %></h3>
		<div class="row">
			<img src="<%= @current_card["pic"] %>"/>
		</div>
		<div class="row">
			<% @current_card.each do |info_key, info_val| %>
				<% unless info_key == "index" || info_key == "pic"  || info_key == "pic2"  || info_key == "pic3" || !is_special_key?(info_key) %>
					<div class="profile-stat-container">
						<h5 class="card-title"><%= info_key.capitalize %>:</h5>
						<p class="short-stat-content"><%= format_stat(info_key, info_val) %></p>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
	<div class="col-*">
		<% @current_card.each do |info_key, info_val| %>
			<% unless is_special_key?(info_key) || info_key == "index" %>
				<div class="profile-stat-container">
					<h5 class="card-title"><%= info_key.capitalize %>:</h5>
					<ul>
						<% info_val.split(".").each do |line| %>
						<p><%= line %></p>
						<% end %>
					</ul>
				</div>
			<% end %>
		<% end %>
	</div>
</div>
