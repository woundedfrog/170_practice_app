<div id="viewing_profile"></div>

<div class="container">
	<div  class="special-links">
		<% stars = @current_card["stars"] %>
		<a href="#" onclick="goBack()">Go back</a>
		<% if session[:username] %>
				<a href="/equips/<%= stars %>stars/<%= @sc_name.downcase %>/edit">  | Edit</a>
				<a href="/equips/<%= stars %>/<%= @sc_name %>/remove" onClick="return checkMe()">Remove</a>
			<% end %>
	</div>

	<h3><%= upcase_name(@sc_name) %></h3>
	<div class="row">
		<div class="col-*">
			<img id="profile-sc" src="<%= @current_card["pic"] %>" alt="<%= @sc_name %>"/>
		</div>

		<div class="col-* stat-div-container">
			<% @current_card.each do |info_key, info_val| %>
			<% unless ["index", "pic"].include?(info_key) %>
				<div class="profile-stat-container">
					<h5 class="card-title"><%= info_key.capitalize %>:</h5>
					<% if ["stars", "tier"].include?(info_key) %>
						<%== format_stat(info_key, info_val) %>
					<% else %>
						<% info_val.split(". ").each do |line| %>
							<% if line[-1] != '.' && info_key != "stars" %>
								<p><strong>·</strong> <%= line + "." %></p>
							<% else %>
								<p><strong>·</strong> <%= line %></p>
							<% end %>
						<% end %>
					<% end %>
				</div>
			<% end %>
			<% end %>
		</div> <!-- col div -->

	</div>  <!-- row div -->

</div> <!-- inner main container -->
