<% if session[:message] %>
  <p class="message"><%= session.delete(:message) %></p>
<% end %>
<div class="container">
    <div class="row justify-content-center">
      <% @cards.each do |card, card_details| %>
        <% rating = card["stars"] + "stars" %>
      <div class="col-* sc-grid-cols">

          <% if session[:username] %>
          <div class="edit-remove-buttons">
            <a href="/equips/<%= rating %>/<%= card['name'] %>/edit">Edit</a>|
            <a href="/equips/<%= rating %>/<%= card['name'] %>/remove" onClick="return checkMe()">Remove</a>
          </div>
          <% end %>

          <a href="/equips/<%= rating %>/<%= card['name'] %>">
            <img class="sc_index_pic" src="<%= card['pic1'] %>" alt="<%= card['name'] %>"/>
          </a>
          <h6 class="sc-profile-title"><%= upcase_name(card['name']) %></h6>
      </div>
  <% end %>
  </div>
</div>
